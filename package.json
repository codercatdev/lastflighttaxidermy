{
  "name": "lastflighttaxidermy-workspace",
  "version": "2.0.0",
  "private": true,
  "description": "Last Flight Taxidermy - Monorepo with Next.js and Sanity Studio",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "studio": "pnpm --filter studio dev",
    "studio:build": "pnpm --filter studio build",
    "lint": "pnpm --filter web lint",
    "type-check": "pnpm --filter web type-check && pnpm --filter studio type-check"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}